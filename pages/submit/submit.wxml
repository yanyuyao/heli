<form bindsubmit="formSubmit">
    <view class="contain">
      <input id="companyname" name="companyname" type="text" placeholder="姓名/公司名称" bindinput="namevalue" value="华域"></input>
      <input id="phone" name="phone" type="number" placeholder="手机号" bindblur="telvalue" value="15253179656"></input>
      <view class="card {{soundactive}}" bindtap="soundcardtap">语音咨询</view>
      <view class="card {{textactive}}" bindtap="textcardtap">文字咨询</view>
      <view class="sound" style="display:{{sounddisplay}}">
        <button size="mini" bindlongtap="soundtap" bindtouchend="soundtapend">录音</button>
      </view>
      <view class="text" style="display:{{textdisplay}}">
        <textarea placeholder="" id="zixun_text" name="zixun_text" value="请尽快提交给我资料"/>
      </view>
      <input id="email" name="email" type="text" placeholder="邮箱" value="qinghai@gmail.com"></input>
      <view class="paytype">
        支付方式：微信支付
      </view>
    </view>


    <view class="footer" style="display:block;">
      <image src="{{selectedimg}}"></image>
      <view class="price">￥{{selectedprice}}.00</view>
      <!--<navigator url="../success/success">-->
        <view class="confirm" bindtap="createOrder">
         <button formType="submit">提交并支付</button>
          <view class="confirm-right">></view>
        </view>
     <!--</navigator>-->
    </view>
</form>


