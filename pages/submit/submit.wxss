.contain{
  width:94%; margin:0 3%;
}
.contain input{
  width:96%; height:35px; line-height:35px; border-bottom:1px solid #ccc; font-size:0.8rem; padding:0 2%;
}
.card{
  width:50%;  margin:5px 0; margin-right:-2px; border:1px solid #ccc; float: left; text-align: center; line-height:40px; font-size:0.8rem;
}
.sound{
  width: 100%; border-top:1px solid #ccc; border-bottom:1px solid #ccc; height:100px; clear:both; text-align: center; margin-bottom:5px;
}
.sound button{
  width:23%; height:35px; line-height:35px; margin:32px auto;
}
.text{
  width: 100%; border-top:1px solid #ccc; border-bottom:1px solid #ccc; clear:both; text-align:left; margin-bottom: 5px;
}
.text textarea{
  height:130px; width:98%; padding:1%; font-size:0.8rem;
}
.cardactive{
  color:#fff; background-color:#E51C23;
}
.paytype{
  width:98%; line-height:35px; font-size:0.8em; padding-left:2%; margin:20px 0;
}


.footer{
  width:100%; height:50px; font-size:0.8rem; line-height:50px; background-color:#E51C23; color:#fff; clear:both; position:fixed; bottom:0; left:0;
}
.footer image{
  width:12%; height:35px; margin:7px 2% 0; float:left;
}
.price{
  width:35%; text-align: center; float:left;
}
.confirm{
  width:40%; float:right; text-align:left; margin:8px 0; border-left:1px solid #f2f2f2; line-height:34px; padding:0 2%;
}
.confirm-right{
  float:right;
}
























