<view class="view2">
  <view wx:for="{{serveList}}">
    <image class="image" src="https://xcx.heyukj.com/{{item.serve_url}}"></image>
    <text class="bt">{{item.serve_name}} {{item.serve_title}}</text>
    <image class="add" id="{{item.serve_id}}" data-serveid="{{item.serve_id}}" data-servename="{{item.serve_name}}" data-price="{{item.serve_price}}" data-img="https://xcx.heyukj.com/{{item.serve_url}}" bindtap="addtap" src="../../images/plus.png"></image>
  </view>
</view>
<view class="footer" style="display:{{footerdisplay}}">
  <image src="{{selectedimg}}"></image>
  <view class="price">￥{{selectedprice}}.00</view>
  <navigator url="../submit/submit?serve_id={{serve_id}}&serve_name={{serve_name}}&selectedimg={{selectedimg}}&selectedprice={{selectedprice}}">
    <view class="confirm">
      选好了
      <view class="confirm-right">></view>
    </view>
  </navigator>
</view>