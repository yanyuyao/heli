<view class="view2" bindtap="bodytap">
  <swiper vertical="true" class="servesingle" style="height:{{singleheight}}px;">
    <block wx:for="{{serveList}}">
      <swiper-item>
        <image src="https://xcx.heyukj.com{{item.serve_bg}}" class="bgimg"></image>
        <view class="btk">
          <image class="logo" src="https://xcx.heyukj.com/{{item.serve_url}}"></image>
          <text class="bt">{{item.serve_name}}</text>
        </view>
        <image mode="aspectFit" style="height:{{lcimgheight}}px;" class="image" src="https://xcx.heyukj.com{{item.serve_process}}"></image>
        <button size="mini" class="add" id="{{item.serve_id}}" data-serveid="{{item.serve_id}}" data-servename="{{item.serve_name}}" data-price="{{item.serve_price}}" data-img="https://xcx.heyukj.com/{{item.serve_url}}" bindtap="addtap">￥{{item.serve_price}}  购买</button>
        <!--<view class="arrow-k"> 
          <image class="arrow" mode="widthFix" src="https://xcx.heyukj.com{{item.serve_arrow}}"></image>
        </view>-->
      </swiper-item>
    </block>
  </swiper>
