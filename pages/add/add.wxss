.contain{
  width:94%; margin:0 3%;
}
input,picker,radio-group{
  width:96%; height:35px; line-height:35px; border-bottom:1px solid #ccc; font-size:0.8rem; padding:0 2%;
}
label{
  margin-right:10px;
}
.headimgk{
  width:100%; text-align: center;
}
.headimg{
  width:100px; height:100px;margin: 10px auto;
}
.text{
  width: 100%; border-bottom:1px solid #ccc; text-align:left; margin-bottom: 5px;
}
.text textarea{
  height:70px; width:98%; padding:1%; font-size:0.8rem;
}
.buttonk{
  width:100%; text-align:center; margin-bottom:20px;
}
button[size="mini"].button{
  width:80%; line-height:35px; height:35px; background-color:#a21e2c; color:#fff; margin:30px auto 0; font-size:0.8rem;
}
.phone{
  width:100%; text-align: center; line-height: 1.2rem; font-size:0.9rem; margin:20px auto;
}




.button-k{
  text-align: center;
}
button.button{
  width:60%; line-height:35px; background-color:#a21e2c; color:#fff; margin:20px auto 30px; font-size:0.8rem; padding:0;
}
.list{
  width:84%; margin:0 8%; line-height:70px; border-bottom:1px solid #ccc; clear:both;
}
.list image{
  width:40px; height:40px; vertical-align:middle; margin-top:-5px; margin-right:10px;
}
.list-right{
  float: right; margin-right:10px;
}



